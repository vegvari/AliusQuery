<?xml version="1.0" ?>
<ruleset>
    <rule ref="PSR2" />
    <file>./src</file>
    <file>./test</file>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120" />
        </properties>
    </rule>

    <rule ref="PEAR.Commenting">
        <exclude name="PEAR.Commenting.FileComment" />
        <exclude name="PEAR.Commenting.ClassComment" />
    </rule>
</ruleset>
